<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.notas.MainActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtPA1"
        android:hint="PA1"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnCalculate"
        android:layout_alignStart="@+id/btnCalculate"
        android:layout_alignRight="@+id/btnCalculate"
        android:layout_alignEnd="@+id/btnCalculate" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="PA2"
        android:id="@+id/edtPA2"
        android:layout_below="@+id/edtPA1"
        android:layout_alignLeft="@+id/edtPA1"
        android:layout_alignStart="@+id/edtPA1"
        android:layout_alignRight="@+id/edtPA1"
        android:layout_alignEnd="@+id/edtPA1" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="PA3"
        android:id="@+id/edtPA3"
        android:layout_below="@+id/edtPA2"
        android:layout_alignLeft="@+id/edtPA2"
        android:layout_alignStart="@+id/edtPA2"
        android:layout_alignRight="@+id/edtPA2"
        android:layout_alignEnd="@+id/edtPA2" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtPA4"
        android:hint="PA4"
        android:layout_below="@+id/edtPA3"
        android:layout_alignLeft="@+id/edtPA3"
        android:layout_alignStart="@+id/edtPA3"
        android:layout_alignRight="@+id/edtPA3"
        android:layout_alignEnd="@+id/edtPA3" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtPB1"
        android:layout_below="@+id/edtPA4"
        android:hint="PB1"
        android:layout_alignLeft="@+id/edtPA4"
        android:layout_alignStart="@+id/edtPA4"
        android:layout_alignRight="@+id/edtPA3"
        android:layout_alignEnd="@+id/edtPA3" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtPB2"
        android:hint="PB2"
        android:layout_below="@+id/edtPB1"
        android:layout_alignLeft="@+id/edtPB1"
        android:layout_alignStart="@+id/edtPB1"
        android:layout_alignRight="@+id/edtPB1"
        android:layout_alignEnd="@+id/edtPB1" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtPB3"
        android:hint="PB3"
        android:layout_below="@+id/edtPB2"
        android:layout_alignLeft="@+id/edtPB2"
        android:layout_alignStart="@+id/edtPB2"
        android:layout_alignRight="@+id/edtPB1"
        android:layout_alignEnd="@+id/edtPB1" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtPB4"
        android:hint="PB4"
        android:layout_below="@+id/edtPB3"
        android:layout_alignLeft="@+id/edtPB3"
        android:layout_alignStart="@+id/edtPB3"
        android:layout_alignRight="@+id/edtPB3"
        android:layout_alignEnd="@+id/edtPB3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular promedio"
        android:id="@+id/btnCalculate"
        android:layout_below="@+id/edtPromedio"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtPY"
        android:hint="PY"
        android:layout_above="@+id/btnCalculate"
        android:layout_alignLeft="@+id/edtPA1"
        android:layout_alignStart="@+id/btnCalculate"
        android:layout_alignRight="@+id/btnCalculate"
        android:layout_alignEnd="@+id/btnCalculate" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtPromedio"
        android:hint= "PROMEDIO FINAL"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/edtPB4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PA1"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/edtPA1"
        android:layout_alignBottom="@+id/edtPA1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PA2"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/edtPA2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PA3"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/edtPA3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PA4"
        android:id="@+id/textView4"
        android:layout_below="@+id/edtPA3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PB1"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/edtPB1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PB2"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/edtPB2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PB3"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/edtPB3"
        android:layout_alignBottom="@+id/edtPB3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PB4"
        android:id="@+id/textView8"
        android:layout_alignBaseline="@+id/edtPB4"
        android:layout_alignBottom="@+id/edtPB4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
